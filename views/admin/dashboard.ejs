<%- include('../partials/header.ejs') %>

    <main style="height: 78vh; margin-bottom: 90px;">
        <div>
            <% let image = admin.gender === 'male' ? "/images/img_avatar1.png" : admin.gender === 'female' ? "/images/img_avatar2.png" : "/images/fruit_avatar.png" %>
                <h1 class="dashboard_AdminName my-5">Hello,
                    <%= admin.username %><img src="<%= image %>" alt="Avatar" class="dashboard_avatar float-end mx-3"></h1>
        </div>

        <div class="dashboard_container my-5 d-flex flex-row justify-content-evenly flex-wrap">
            <a href="/admin/users" class="dashboard_card my-5 py-3 mx-2">
                <h2>Cashiers</h2>
                <h3>
                    <%= users %>
                </h3>
            </a>
            <a href="/admin/orders" class="dashboard_card my-5 py-3 mx-2">
                <h2>Orders</h2>
                <h3>
                    <%= orders %>
                </h3>
            </a>
            <a href="/admin/products" class="dashboard_card my-5 py-3 mx-2">
                <h2>Products</h2>
                <h3>
                    <%= prods %>
                </h3>
            </a>
            <a href="/admin/out_of_stock?disable=true" class="dashboard_card my-5 py-3 mx-2">
                <h2>Out of stock</h2>
                <h3>
                    <%= outProds %>
                </h3>
            </a>
            <a href="/admin/categories" class="dashboard_card my-5 py-3 mx-2">
                <h2>Categories</h2>
                <h3>
                    <%= categories %>
                </h3>
            </a>
        </div>




    </main>



    <%- include('../partials/footer.ejs') %>