<%- include('../partials/header.ejs') %>

<main style="height: 90vh; margin-top: 54px; margin-bottom: 105px;">
  <div id="register">
  <div class="card">
    <% if (errorMessage) { %>
    <div class="user_message user_message_error"><%= errorMessage %></div>
    <% } %>
    <h1>Signup</h1>
    <form action="/signup" method="POST">
      <div>
        <label for="username">Username:</label>
        <input type="text" name="username" id="username" />
      </div>
      <div>
        <label for="email">Email:</label>
        <input type="text" name="email" id="email" />
      </div>
      <div>
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" />
      </div>
      <div>
        <label for="physicalAddress">Physical address:</label>
        <input type="text" name="physicalAddress" id="physicalAddress" />
      </div>
      <div>
        <label for="gender">Gender:</label>
        <select name="gender" id="gender" class="w-100 mb-2" style="height: 45px; border-radius: 5px;">
          <option>Select gender</option>
          <option value="male">male</option>
          <option value="female">female</option>
          <option value="other">other</option>
        </select>
      </div>
      <div>
        <!-- <label for="role">Role:</label> -->
        <input type="hidden" name="role" id="role" value="user" />
        <!-- <select name="role" id="role" class="form-control">
          <option value="user">user</option>
        </select> -->
      </div>
      <button type="submit" class="btn btn-outline-warning">Signup</button>
      <a href="/" class="btn btn-outline-secondary" >Back</a>
    </form>
  </div>
</main>

  <%- include('../partials/footer.ejs') %>
</div>
